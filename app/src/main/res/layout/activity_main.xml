<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C82155"
    tools:context=".MainActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mprofile"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/dog"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>
    <RadioGroup
        android:id="@+id/rdgroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/mprofile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/radiogroup">
        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rbleft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/log_in"
            android:textStyle="bold"
            android:gravity="center"
            android:button="@android:color/transparent"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="65dp"
            android:paddingRight="65dp"
            android:layout_weight="1"
            android:background="@drawable/radio_selector"
            android:checked="true"
            android:onClick="onRadioButtonChecked"/>

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rbright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:paddingLeft="65dp"
            android:paddingTop="15dp"
            android:paddingRight="65dp"
            android:paddingBottom="15dp"
            android:text="@string/sign_up"
            android:textStyle="bold"
            android:onClick="onRadioButtonChecked"/>
    </RadioGroup>
    <LinearLayout
        android:id="@+id/imagebuttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_below="@+id/rdgroup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">
        <ImageButton
            android:id="@+id/mtwitter"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/ic_twitter"
            android:background="@drawable/imagebut"
            android:layout_marginEnd="20dp"
            android:clickable="true"
            android:onClick="onImageClick"
            android:focusable="true" />
        <ImageButton
            android:id="@+id/mfacebook"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/ic_facebook"
            android:background="@drawable/imagebut"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:onClick="onImageClick"
            android:focusable="true" />
        <ImageButton
            android:id="@+id/mgoogle"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/ic_google"
            android:layout_marginStart="20dp"
            android:background="@drawable/imagebut"
            android:clickable="true"
            android:onClick="onImageClick"
            android:focusable="true" />
    </LinearLayout>

    <TextView
        android:id="@+id/mor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/or"
        android:textSize="20sp"
        android:layout_below="@+id/imagebuttons"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/mTextViewUserid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_name_email_address"
        android:textStyle="bold"
        android:textColor="#3D1F80"
        android:layout_below="@+id/mor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>
    <EditText
        android:id="@+id/mEditTextUserid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:textAlignment="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/mTextViewUserid"/>
    <TextView
        android:id="@+id/mTextViewPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="Password"
        android:textStyle="bold"
        android:textColor="#3D1F80"
        android:layout_below="@+id/mEditTextUserid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"/>
    <EditText
        android:id="@+id/mEditTextPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Password"
        android:textAlignment="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/mTextViewPass" />
    <CheckBox
        android:id="@+id/mcheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember me"
        android:textStyle="bold"
        android:layout_below="@+id/mEditTextPass"
        android:layout_marginLeft="20dp"/>

    <Button
        android:id="@+id/mdone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="done"
        android:layout_below="@id/mcheckbox"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
        android:paddingRight="15dp"
        android:textColor="@color/white"
        android:background="@drawable/radio_checked"/>


</RelativeLayout>